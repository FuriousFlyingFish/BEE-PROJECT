.footer-col h4 {
  color: white;
  margin-bottom: 25px;
  font-size: 22px;
  position: relative;
  font-family: 'Ubuntu', sans-serif;
}

.footer-col h4::before {
  content: '';
  width: 70px;
  height: 2px;
  position: absolute;
  background-color: #e91e64;
  bottom: -10px;
}

.footer-col ul li {
  padding: 10px 0;
