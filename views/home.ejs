        .sign-in-box {
            background-color: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
            width: 380px;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border: 1px solid #ccc;
            margin: 10px 0;
        }

        .sign-in-box h1 {
            text-align: center;
            color: #333;
            font-weight: bold;
            margin-bottom: 15px;
            font-size: 20px;
        }

        .sign-in-box form {
            display: flex;
            flex-direction: column;
        }

        .sign-in-box label {
            margin-bottom: 4px;
            color: #333;
            font-weight: bold;
            font-size: 14px;
        }

        .sign-in-box input {
            margin-bottom: 10px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            background-color: #f9f9f9;
        }

        .sign-in-box button {
            padding: 10px;
            background-color: #333;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .sign-in-box button:hover {
            background-color: #555;
        }

        .login-link {
            text-align: center;
            margin-top: 8px;
            font-size: 14px;
        }

        .login-link a {
            color: #333;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .login-link a:hover {
            color: #555;
            text-decoration: underline;
        }

        .hero {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), 
